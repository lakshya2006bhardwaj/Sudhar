<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingBottom="20dp"
    tools:context=".home.UndergroundMiningCalculatorFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvHeadSurfaceMine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:fontFamily="@font/acme_regular"
                android:gravity="center"
                android:text="UnderGround Mining"
                android:textColor="@color/white"
                android:textSize="40dp"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvStepNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:fontFamily="@font/acme_regular"
                android:text="Step 1->Exploration and Drilling"
                android:textColor="@color/white"
                android:textSize="25dp"
                app:layout_constraintTop_toBottomOf="@id/tvHeadSurfaceMine" />

            <TextView
                android:id="@+id/tvMachinesDiesel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:fontFamily="@font/acme_regular"
                android:text="----  Machines run on Diesel Engine ----"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:layout_constraintTop_toBottomOf="@id/tvStepNum" />

            <TextView
                android:id="@+id/tvMachineName1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/acme_regular"
                android:text="Diamond Core Drill"
                android:textColor="@color/white"
                android:textSize="18dp"
                app:layout_constraintTop_toBottomOf="@id/tvMachinesDiesel" />

            <EditText
                android:id="@+id/etMachine1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_edit_text"
                android:hint="Enter amount of diesel in litres"
                android:inputType="number"
                android:padding="18dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@id/tvMachineName1" />

            <TextView
                android:id="@+id/tvMachineName2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/acme_regular"
                android:text="Rotary Drill"
                android:textColor="@color/white"
                android:textSize="18dp"
                app:layout_constraintTop_toBottomOf="@id/etMachine1" />

            <EditText
                android:id="@+id/etMachine2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_edit_text"
                android:hint="Enter amount of diesel in litres"
                android:inputType="number"
                android:padding="18dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@id/tvMachineName2" />

            <TextView
                android:id="@+id/tvMachinesElectricity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:fontFamily="@font/acme_regular"
                android:text="----  Machines run on Electricity ----"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:layout_constraintTop_toBottomOf="@id/etMachine2" />

            <TextView
                android:id="@+id/tvMachineName3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/acme_regular"
                android:text="Jumbo Drill"
                android:textColor="@color/white"
                android:textSize="18dp"
                app:layout_constraintTop_toBottomOf="@id/tvMachinesElectricity" />

            <EditText
                android:id="@+id/etMachine3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_edit_text"
                android:hint="Enter amount of electricity in kWh"
                android:inputType="number"
                android:padding="18dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@id/tvMachineName3" />

            <TextView
                android:id="@+id/tvMachineName4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/acme_regular"
                android:text="Raise Borer"
                android:textColor="@color/white"
                android:textSize="18dp"
                app:layout_constraintTop_toBottomOf="@id/etMachine3" />

            <EditText
                android:id="@+id/etMachine4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/login_edit_text"
                android:hint="Enter amount of electricity in kWh"
                android:inputType="number"
                android:padding="18dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@id/tvMachineName4" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/nextBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/green_rounded_bg"
                android:fontFamily="@font/acme_regular"
                android:text="Next"
                android:textColor="@color/black"
                android:textSize="20dp"
                app:backgroundTint="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etMachine4" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/grpData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:constraint_referenced_ids="tvMachineName1,tvMachineName2,tvMachineName3,tvMachineName4,tvMachinesElectricity,tvMachinesDiesel,etMachine1,etMachine2,etMachine3,etMachine4,tvStepNum,nextBtn" />

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChart"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/tvHeadSurfaceMine"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>