<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AboutFragment"
    android:background="@color/black">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-40dp"
        tools:layout_editor_absoluteY="-81dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvMainHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-black"
                android:text="About SUDHAR"
                android:textSize="40sp"
                android:textStyle="italic"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/mainImg"
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/hero_frame"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvMainHead" />

            <TextView
                android:id="@+id/tvVision"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="sans-serif"
                android:minLines="3"
                android:textColor="@color/white"
                android:text="Vision and\nValues.."
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/mainImg"
                app:layout_constraintTop_toTopOf="@id/mainImg"
                android:layout_marginRight="20dp"

                />

            <TextView
                android:id="@+id/tvOur"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="sans-serif"
                android:text="Our Impact Stories.."
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/mainImg"
                app:layout_constraintTop_toBottomOf="@id/tvVision"

                />

            <TextView
                android:id="@+id/tvmission"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:textColor="@color/white"
                android:fontFamily="sans-serif"
                android:text="Our Mission is to.."
                android:textSize="15sp"
                app:layout_constraintEnd_toStartOf="@id/mainImg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/mainImg" />

            <TextView
                android:id="@+id/tvstories"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:fontFamily="sans-serif"
                android:text="Our Stories.."
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintEnd_toStartOf="@id/mainImg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvmission"

                />

            <TextView
                android:id="@+id/tvourTeam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textSize="20sp"
                android:text="Our Team.."
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/mainImg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="30dp" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/white"
                android:layout_margin="30dp"
                app:layout_constraintTop_toBottomOf="@id/tvourTeam" />

            <TextView
                android:id="@+id/sustainableFuture"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Our Mission is to provide accurate and real-time data on the carbon footprint produced by coal plants across the nation, enabling informed decisions for a sustainable future"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:fontFamily="sans-serif-black"
                app:layout_constraintTop_toBottomOf="@id/view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/matka"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/matka"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/matka_img"
                app:layout_constraintStart_toEndOf="@id/sustainableFuture"
                app:layout_constraintTop_toTopOf="@id/sustainableFuture"
                app:layout_constraintBottom_toBottomOf="@id/sustainableFuture"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/story"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Our Story"
                app:layout_constraintTop_toBottomOf="@id/sustainableFuture"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:fontFamily="@font/acme_regular" />

            <TextView
                android:id="@+id/storydetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="started as a small initiative has now grown into a comprehensive tool used by government entities to monitor and reduce carbon footprints."
                app:layout_constraintTop_toBottomOf="@id/story"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:fontFamily="sans-serif"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="10dp" />

            <TextView
                android:id="@+id/year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="2024"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/storydetail"
                android:layout_margin="20dp" />
            <LinearLayout
                android:id="@+id/llTimeLineView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/year">
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/circle"
                            />
                        <View
                            android:layout_width="50dp"
                            android:layout_height="2dp"
                            android:background="@color/white"
                            android:layout_gravity="center"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/circle"
                            />
                        <View
                            android:layout_width="50dp"
                            android:layout_height="2dp"
                            android:background="@color/white"
                            android:layout_gravity="center"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/circle"
                            />
                        <View
                            android:layout_width="50dp"
                            android:layout_height="2dp"
                            android:background="@color/white"
                            android:layout_gravity="center"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/circle"
                            />
                        <View
                            android:layout_width="50dp"
                            android:layout_height="2dp"
                            android:background="@color/white"
                            android:layout_gravity="center"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/circle"
                            />
                        <View
                            android:layout_width="50dp"
                            android:layout_height="2dp"
                            android:background="@color/white"
                            android:layout_gravity="center"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/circle"
                            />
                        <View
                            android:layout_width="50dp"
                            android:layout_height="2dp"
                            android:background="@color/white"
                            android:layout_gravity="center"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/circle"
                            />
                        <View
                            android:layout_width="50dp"
                            android:layout_height="2dp"
                            android:background="@color/white"
                            android:layout_gravity="center"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/circle"
                            />
                        <View
                            android:layout_width="50dp"
                            android:layout_height="2dp"
                            android:background="@color/white"
                            android:layout_gravity="center"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/circle"
                            />
                        <View
                            android:layout_width="50dp"
                            android:layout_height="2dp"
                            android:background="@color/white"
                            android:layout_gravity="center"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/circle"
                            />
                        <View
                            android:layout_width="50dp"
                            android:layout_height="2dp"
                            android:background="@color/white"
                            android:layout_gravity="center"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/circle"
                            />
                        <View
                            android:layout_width="50dp"
                            android:layout_height="2dp"
                            android:background="@color/white"
                            android:layout_gravity="center"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/circle"
                            />
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Meet the Team behind SUDHAR"
                android:fontFamily="@font/acme_regular"
                app:layout_constraintTop_toBottomOf="@id/llTimeLineView"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_margin="20dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>