<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:layout_margin="20dp"
        android:text="Congratulations! your account has been\nsuccessfully created"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:textFontWeight="1000"
        />

    <TextView
        android:id="@+id/tvSubHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@id/tvHeading"
        android:gravity="center"
        android:layout_margin="20dp"
        android:text="To secure your account please select a security question and provide an answer"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="sans-serif"
        />

    <TextView
        android:id="@+id/tvsecurityquestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Security Question"
        android:fontFamily="sans-serif-black"
        app:layout_constraintTop_toBottomOf="@id/tvSubHead"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        />

    <Spinner
        android:id="@+id/securityspinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvsecurityquestion"
        />

    <TextView
        android:id="@+id/tvsecurityanswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Security Answer"
        android:fontFamily="sans-serif-black"
        app:layout_constraintTop_toBottomOf="@id/securityspinner"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvsecurityanswer"
        android:background="@drawable/login_edit_text"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:hint="Password"
        />

    <TextView
        android:id="@+id/tvconfirmanswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm Security Answer"
        android:fontFamily="sans-serif-black"
        app:layout_constraintTop_toBottomOf="@id/etPassword"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        />

    <EditText
        android:id="@+id/etConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvconfirmanswer"
        android:background="@drawable/login_edit_text"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:hint="Confirm Password"
        />

    <Button
        android:id="@+id/btnsecure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Secure My Account"
        app:layout_constraintTop_toBottomOf="@id/etConfirmPassword"
        android:layout_marginVertical="30dp"
        android:layout_marginHorizontal="20dp"
        android:padding="10dp"
        app:backgroundTint="@null"
        android:textColor="@color/black"
        android:background="@drawable/green_rounded_bg"
        />



    










</androidx.constraintlayout.widget.ConstraintLayout>