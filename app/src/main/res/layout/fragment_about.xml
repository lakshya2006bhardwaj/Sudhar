<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".about.AboutFragment">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-40dp"
        tools:layout_editor_absoluteY="-81dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tvMainHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-black"
                android:text="About SUDHAR"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/mainImg"
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/hero_frame"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvMainHead" />

            <TextView
                android:id="@+id/tvVision"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="20dp"
                android:fontFamily="sans-serif"
                android:minLines="3"
                android:text="Vision and\nValues.."
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/mainImg"
                app:layout_constraintTop_toTopOf="@id/mainImg"

                />

            <TextView
                android:id="@+id/tvOur"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:fontFamily="sans-serif"
                android:text="Our Impact Stories.."
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/mainImg"
                app:layout_constraintTop_toBottomOf="@id/tvVision"

                />

            <TextView
                android:id="@+id/tvmission"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:fontFamily="sans-serif"
                android:text="Our Mission is to.."
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintEnd_toStartOf="@id/mainImg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/mainImg" />

            <TextView
                android:id="@+id/tvstories"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:fontFamily="sans-serif"
                android:text="Our Stories.."
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintEnd_toStartOf="@id/mainImg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvmission"

                />

            <TextView
                android:id="@+id/tvourTeam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="sans-serif"
                android:text="Our Team.."
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mainImg" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="30dp"
                android:background="@color/white"
                app:layout_constraintTop_toBottomOf="@id/tvourTeam" />

            <TextView
                android:id="@+id/sustainableFuture"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:fontFamily="sans-serif-black"
                android:text="Our Mission is to provide accurate and real-time data on the carbon footprint produced by coal plants across the nation, enabling informed decisions for a sustainable future"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@id/matka"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view" />

            <ImageView
                android:id="@+id/matka"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/matka_img"
                app:layout_constraintBottom_toBottomOf="@id/sustainableFuture"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/sustainableFuture"
                app:layout_constraintTop_toTopOf="@id/sustainableFuture" />

            <TextView
                android:id="@+id/story"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/acme_regular"
                android:gravity="center"
                android:text="Our Story"
                android:textColor="@color/white"
                android:textSize="40sp"
                app:layout_constraintTop_toBottomOf="@id/sustainableFuture" />

            <TextView
                android:id="@+id/storydetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="10dp"
                android:layout_marginTop="40dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="started as a small initiative has now grown into a comprehensive tool used by government entities to monitor and reduce carbon footprints."
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/story" />

            <TextView
                android:id="@+id/year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="center"
                android:text="2024"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/storydetail" />

            <LinearLayout
                android:id="@+id/llTimeLineView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/year">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/circle" />

                        <View
                            android:layout_width="50dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center"
                            android:background="@color/white" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/circle" />

                        <View
                            android:layout_width="50dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center"
                            android:background="@color/white" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/circle" />

                        <View
                            android:layout_width="50dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center"
                            android:background="@color/white" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/circle" />

                        <View
                            android:layout_width="50dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center"
                            android:background="@color/white" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/circle" />

                        <View
                            android:layout_width="50dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center"
                            android:background="@color/white" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/circle" />

                        <View
                            android:layout_width="50dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center"
                            android:background="@color/white" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/circle" />

                        <View
                            android:layout_width="50dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center"
                            android:background="@color/white" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/circle" />

                        <View
                            android:layout_width="50dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center"
                            android:background="@color/white" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/circle" />

                        <View
                            android:layout_width="50dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center"
                            android:background="@color/white" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/circle" />

                        <View
                            android:layout_width="50dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center"
                            android:background="@color/white" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/circle" />

                        <View
                            android:layout_width="50dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center"
                            android:background="@color/white" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/circle" />
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <TextView
                android:id="@+id/meet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:fontFamily="@font/acme_regular"
                android:gravity="center"
                android:text="Meet the Team behind SUDHAR"
                android:textColor="@color/white"
                android:textSize="40sp"
                app:layout_constraintTop_toBottomOf="@id/llTimeLineView" />

            <TextView
                android:id="@+id/tvAGrpOfPassionate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="A group of passionate engineering students committed to making a difference."
                android:textColor="@color/darkgrey"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/meet" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvTeamMember"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/tvAGrpOfPassionate"
                tools:listitem="@layout/team_member_item" />

            <ImageView
                android:id="@+id/plantImg"
                android:layout_width="140dp"
                android:layout_height="400dp"
                android:src="@drawable/about_tree"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rvTeamMember" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/visionconstraint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/verydarlgrey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/plantImg"
                app:layout_constraintTop_toTopOf="@id/plantImg">

                <TextView
                    android:id="@+id/ourvision"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OUR VISION"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/visiondetail"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="At the heart of SUDHAR lies a deep commitment to sustainability and environmental stewardship. Our vision is not just about monitoring carbon footprints but about fostering a world where every decision is guided by an awareness of its impact on our planet. We believe in a future where technology and innovation lead the way to a healthier, more sustainable world for generations to come."
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ourvision" />

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/aboutimg1"
                    app:layout_constraintEnd_toStartOf="@id/img2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/visiondetail" />

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/aboutimg2"
                    app:layout_constraintEnd_toStartOf="@id/img3"
                    app:layout_constraintStart_toEndOf="@id/img1"
                    app:layout_constraintTop_toBottomOf="@id/visiondetail" />

                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/aboutimg3"
                    app:layout_constraintEnd_toStartOf="@id/img4"
                    app:layout_constraintStart_toEndOf="@id/img2"
                    app:layout_constraintTop_toBottomOf="@id/visiondetail" />

                <ImageView
                    android:id="@+id/img4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/aboutimg4"
                    app:layout_constraintEnd_toStartOf="@id/img5"
                    app:layout_constraintStart_toEndOf="@id/img3"
                    app:layout_constraintTop_toBottomOf="@id/visiondetail" />

                <ImageView
                    android:id="@+id/img5"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/aboutimg5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/img4"
                    app:layout_constraintTop_toBottomOf="@id/visiondetail" />

                <TextView
                    android:id="@+id/imgtext1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Promoting Environmental Awareness"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="@id/img1"
                    app:layout_constraintStart_toStartOf="@id/img1"
                    app:layout_constraintTop_toBottomOf="@id/img1" />


                <TextView
                    android:id="@+id/imgtext2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Empowering Informed Decisions"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="@id/img2"
                    app:layout_constraintStart_toStartOf="@id/img2"
                    app:layout_constraintTop_toBottomOf="@id/img2" />


                <TextView
                    android:id="@+id/imgtext3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Driving Sustainable Innovation"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="@id/img3"
                    app:layout_constraintStart_toStartOf="@id/img3"
                    app:layout_constraintTop_toBottomOf="@id/img3" />


                <TextView
                    android:id="@+id/imgtext4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Fostering Global Collaboration"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="@id/img4"
                    app:layout_constraintStart_toStartOf="@id/img4"
                    app:layout_constraintTop_toBottomOf="@id/img4" />


                <TextView
                    android:id="@+id/imgtext5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Building a legacy for Future Generation"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="@id/img5"
                    app:layout_constraintStart_toStartOf="@id/img5"
                    app:layout_constraintTop_toBottomOf="@id/img5" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/footimg"
                android:layout_width="190dp"
                android:layout_height="500dp"
                android:src="@drawable/footimg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/visionconstraint" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/impactconstraint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/verydarlgrey"
                app:layout_constraintBottom_toBottomOf="@id/footimg"
                app:layout_constraintEnd_toStartOf="@id/footimg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/footimg">

                <TextView
                    android:id="@+id/impact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/acme_regular"
                    android:text="The Impact"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                  />

                <TextView
                    android:id="@+id/impactdetail"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="Our platform has already been deployed in Many coal mines, allowing for real-time monitoring of carbon emissions. In just six months, these mines have collectively reduced their emissions by 7%, contributing to a cleaner, more sustainable future. Our goal is to expand this impact, aiming to reduce carbon emissions by 200 tons by 2025."
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/impact" />

                <ImageView
                    android:id="@+id/imgThirteen"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/img13_"
                    app:layout_constraintEnd_toStartOf="@id/imgSeven"

                    app:layout_constraintTop_toBottomOf="@id/impactdetail" />

                <ImageView
                    android:id="@+id/imgSeven"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/img7_"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/impactdetail" />

               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text="Coal Mines\nRegistered"
                   android:textColor="@color/white"
                   app:layout_constraintTop_toBottomOf="@id/imgThirteen"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintEnd_toEndOf="@id/imgThirteen"
                   android:gravity="center"
                   android:layout_marginTop="-20dp"
                   />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Carbon Emmision reduction"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toBottomOf="@id/imgSeven"
                    app:layout_constraintStart_toStartOf="@id/imgSeven"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:gravity="center"
                    android:layout_marginTop="-20dp"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:layout_width="190dp"
                android:layout_height="65dp"
                android:text="Join Us"
                android:backgroundTint="@color/parrotGreen"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/impactconstraint"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="30dp"
                android:textSize="40dp"
                android:fontFamily="sans-serif"
                android:textAlignment="center"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>